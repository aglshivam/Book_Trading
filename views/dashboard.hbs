<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Book trading club</title>

    <style type="text/css">
      .full {
            padding: 0 !important;
            margin: 0 auto !important;
            background-size: cover;
            overflow: hidden;
          }
    </style>

    <!-- Bootstrap -->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Book Trading Club</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <li>
              <div class = "navbar-form navbar-left">
                <button class="btn btn-primary" type="button">
              Notifications <span class="badge">{{count_req}}</span>
              </button> 
              </div>
              
            </li>
            <li>
              <h3>Welcome, {{userName}}</h3>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-8">
          <div class="btn-group btn-group-lg btn-group-vertical" role="group" aria-label="...">
            <button type="button" class="btn btn-default" id="viewbooks">View All Books</button>
            <button type="button" class="btn btn-default" id="addbooks">Add Books</button>
            <button type="button" class="btn btn-default" id="viewprofile">View Profile</button>
          </div>
        </div>

        <div id="btn-result" class="col-xs-6 col-md-4">
          <div class="input-group" id="addinput" style="display:none">
            <input type="text" class="form-control" placeholder="Book ISBN" aria-describedby="basic-addon1" id="isbn">
            <input type="text" class="form-control" placeholder="Book Title" aria-describedby="basic-addon2" id="title">
            <input type="text" class="form-control" placeholder="Author" aria-describedby="basic-addon2" id="author">
            <input type="text" class="form-control" placeholder="Price" aria-describedby="basic-addon2" id="price">
            <button type="button" class="btn btn-default" id="add_book_detail">Add</button>
          </div>
          <div class="input-group" id="booksinfo" style="display:none">
            <table class="table table-striped table-bordered table-hover" cellpadding="5" cellspacing="5" id="t1">
            </table>
          </div>

        </div>

      </div>
    </div>

    <footer>
      <p>Copyright {{currentYear}}</p>
    </footer>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    
    <script type="text/javascript">

      $('#addbooks').on("click", function(){
          $('#addinput').show()
          $('#booksinfo').hide()
      });

      $('#add_book_detail').on("click", function(){
          $.ajax({
            type: "POST",
            url: '/addbooks',
            data: { isbn: $('#isbn').val(), title: $('#title').val(),
                    author: $('#author').val(), price: $('#price').val(),
                    userid: '{{userName}}' },
            success:function(res){
              alert(res)
              $('#addinput').hide()
          }});
      });

      $(document).ready(function(){

        $('#viewbooks').on("click", function(){
            $('#booksinfo').show()
            $('#addinput').hide()
            $.ajax({
              type: "GET",
              url: '/viewbooks',
              success:function(res){
                $("#t1").empty()
                  var data = JSON.parse(res)

                  for (var i=0; i<data.length; i++) {
                    var userid = data[i].userid;
                    var isbn = data[i].isbn;
                    var title = data[i].title;
                    var price = data[i].price;
                    var author = data[i].author;
                    var tData = '<tr><td class="filterable-cell">'+userid+'</td><td class="filterable-cell">'+isbn+'</td><td class="filterable-cell">'+title+'</td><td class="filterable-cell">'+price+'</td><td class="filterable-cell">'+author+'</td><td class="filterable-cell"><button type="button" class="btn btn-default" onclick="myFunction(this)" id="'+isbn+'#'+userid+'">Buy</button></td></tr>'
                    $("#t1").append(tData);
                  }
              }});
        });

      });

      function myFunction(elem) {
        var tokens = elem.id.split("#")
        $.ajax({
              type: "POST",
              url: '/buybooks',
              data: { isbn: tokens[0],
                      clientid: '{{userName}}',
                      ownerid: tokens[1]
                    },
              success:function(res){
                  alert(res)
                $('#booksinfo').hide()
              }
        });
      };

      $('#viewprofile').click(function() {
        $.getJSON('/viewProfile', function(data) {
          var name = data[0].name;
          var city = data[0].city;
          var state = data[0].state;
          var tableHTML = "<table style='border: 1px solid black;' id=&quot;t1&quot;><tr><td>Name</td><td>" + name + "</td></tr><tr><td>City</td><td>" + city + "</td><tr><td>State</td><td>" + state + "</td></tr></table>"
          $("#btn-result").html(tableHTML);
          console.log(name);
        })
      })

    </script>
  </body>
</html>
